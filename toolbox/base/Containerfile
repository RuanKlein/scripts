ARG FEDORA_VERSION=latest
FROM registry.fedoraproject.org/fedora-toolbox:${FEDORA_VERSION}

ENV NAME=base VERSION=1
LABEL com.github.containers.toolbox="true" \
    com.github.debarshiray.toolbox="true"

RUN dnf update -y \
    && dnf install -y \
    zsh \
    sqlite \
    vim \
    xclip

RUN dnf clean all

CMD /usr/bin/zsh
